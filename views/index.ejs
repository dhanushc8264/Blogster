    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Blogster</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav mx-auto ">
              <li class="nav-item px-3">
                <a class="nav-link active" aria-current="page" href="#">üè†Ô∏éHome</a>
              </li>
              <li class="nav-item px-3">
                <a class="nav-link" href="/new">New Blog‚úé</a>
              </li>
              
            </ul>
          </div>
        </div>
      </nav>


      <div class="container">
        <h1>Blog Posts</h1>
        <% if (posts.length>0) { %>
            <ul class="post"></ul>
             <% for( let i = 0; i < posts.length; i++ ) { %>
                   <li class="post-item">
                    <a href="/post/<%= i %>"> <h3><%= posts[i].title %></h3></a>
                </li>
                <% }; %>
            </ul>
        <% } else { %>
            <p>No blog posts yet. Create a new post to get started!</p>
        <% } %>
             
        
      </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
